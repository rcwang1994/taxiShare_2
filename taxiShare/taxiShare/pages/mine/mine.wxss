.page {
  position: relative;
  width: 750rpx;
  height: 1206rpx;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  background-color: #efefef;
}

.page-info {
  display: flex;
  height: 280rpx;
  flex-direction: column;
  padding: 35rpx;
  align-items: center;
  background: #7aabf9;
}

.info-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.info-nickname {
  margin-top: 40rpx;
  font-size: 40rpx;
  color: #fff;
}

.page-menu {
  width: 750rpx;
  height: 926rpx;
  padding-top: 20rpx;
  background-color: #fff;
}

.menu-item {
  position: relative;
  display: flex;
  width: 750rpx;
  height: 100rpx;
  padding: 20rpx;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1px solid #dadada;
}

.menu-f1 {
  margin-left: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
}

.menu-f2 {
  height: 60rpx;
  width: 400rpx;
  margin-left: 40rpx;
}

.menu-text {
  font-size: 40rpx;
  color: #666;
}

.menu-f3 {
  margin-left: 120rpx;
  width: 60rpx;
  height: 60rpx;
}

.menu-f3 image {
  width: 60rpx;
  height: 60rpx;
}
